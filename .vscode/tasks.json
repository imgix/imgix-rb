{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "rake: test",
			"type": "shell",
			"group": "test",
			"problemMatcher": {
				"owner": "ruby",
				"fileLocation": ["relative", "${workspaceFolder}"],
				"pattern": [
						{
							"regexp": "^([^:]+: .+)",
							"message": 1
						},
						{
							"regexp": "^    ([^:]+):(\\d+)",
							"file": 1,
							"line": 2
						}
				]
			},
			"command": "bundle exec rake test"
		}
	]
}